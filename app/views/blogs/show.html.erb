<div class="container">
  <h1><%= @blog.title %></h1>
</div>
<div class="image-wrapper container">
    <%= cl_image_tag @blog.photo.key, crop: :fill, height: 300, width: 300, class: "show-pic" %>
    <h3><%= @blog.body %></h3>

  <% if policy(@blog).destroy? %>
    <div class="mb-3">
      <%= link_to(@blog, method: :delete, data: { confirm: 'Are you sure?' }) do %>
      <i class="far fa-trash-alt">
      </i>
      <% end %>
    </div>
  <% end %>
</div>

