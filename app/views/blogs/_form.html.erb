<%= simple_form_for @blog do |f| %>
  <%= f.input :title %>
  <%= f.input :subject %>
  <%= f.input :body, as: :text %>
  <label class='btn btn-danger btn-sm'>
    <i class='fas fa-image'></i> Add photo
    <span style='display:none'>
      <%= f.input :photo, as: :file %>
    </span>
  </label>
  <div class="d-flex">
    <%= f.submit "submit", class:'btn btn-danger w-100' %>
  </div>
<% end %>


